{
    "designSystemProfile": {
      "name": "Gaming Platform Dark Theme",
      "version": "1.0.0",
      "description": "Dark-themed gaming platform design system with purple accent colors, card-based layouts, and modern UI patterns"
    },
  
    "colorPalette": {
      "backgrounds": {
        "primary": {
          "value": "#1A1A2E",
          "usage": "Main page background, root container"
        },
        "secondary": {
          "value": "#16162A",
          "usage": "Header background, elevated surfaces"
        },
        "tertiary": {
          "value": "#252547",
          "usage": "Card backgrounds, empty states, placeholders"
        },
        "elevated": {
          "value": "#2D2D50",
          "usage": "Hover states on cards, slightly raised elements"
        }
      },
      "accents": {
        "primary": {
          "value": "#7B2FFF",
          "usage": "Primary buttons, active states, key CTAs"
        },
        "primaryLight": {
          "value": "#9747FF",
          "usage": "Gradient end points, hover highlights"
        },
        "primaryDark": {
          "value": "#6023CC",
          "usage": "Button pressed states, shadows with accent"
        }
      },
      "text": {
        "primary": {
          "value": "#FFFFFF",
          "usage": "Headings, button text, primary content"
        },
        "secondary": {
          "value": "#B8B8D0",
          "usage": "Subtitles, descriptions, secondary labels"
        },
        "muted": {
          "value": "#6B6B8A",
          "usage": "Placeholder text, disabled states, timestamps"
        },
        "onAccent": {
          "value": "#FFFFFF",
          "usage": "Text on purple/accent backgrounds"
        }
      },
      "borders": {
        "subtle": {
          "value": "#3D3D60",
          "usage": "Card borders, dividers, input outlines"
        },
        "medium": {
          "value": "#4A4A70",
          "usage": "Focused input borders, hover borders"
        },
        "accent": {
          "value": "#7B2FFF",
          "usage": "Active/selected element borders"
        }
      },
      "status": {
        "notification": {
          "value": "#FF4757",
          "usage": "Notification badges, alerts, counters"
        },
        "success": {
          "value": "#2ED573",
          "usage": "Success states, online indicators"
        },
        "warning": {
          "value": "#FFA502",
          "usage": "Warning states, pending actions"
        }
      },
      "overlays": {
        "dark": {
          "value": "rgba(0, 0, 0, 0.6)",
          "usage": "Image overlays, modal backdrops"
        },
        "gradient": {
          "value": "linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.8) 100%)",
          "usage": "Bottom gradient on featured cards for text legibility"
        }
      }
    },
  
    "gradients": {
      "primaryButton": {
        "value": "linear-gradient(135deg, #7B2FFF 0%, #9747FF 100%)",
        "direction": "135deg",
        "startColor": "#7B2FFF",
        "endColor": "#9747FF",
        "applyTo": ["primary buttons", "CTA cards", "surprise me button"]
      },
      "accentCard": {
        "value": "linear-gradient(145deg, #6023CC 0%, #7B2FFF 50%, #9747FF 100%)",
        "direction": "145deg",
        "applyTo": ["special action cards", "promotional elements"]
      },
      "cardOverlay": {
        "value": "linear-gradient(180deg, transparent 0%, rgba(26, 26, 46, 0.95) 100%)",
        "direction": "180deg (top to bottom)",
        "applyTo": ["featured card bottom overlay for text", "hero image overlays"]
      },
      "headerFade": {
        "value": "linear-gradient(180deg, #16162A 0%, transparent 100%)",
        "direction": "180deg",
        "applyTo": ["sticky header background when scrolled"]
      }
    },
  
    "elementStyling": {
      "header": {
        "container": {
          "background": "#16162A",
          "height": "64px",
          "padding": "0 16px",
          "borderBottom": "none",
          "position": "sticky",
          "zIndex": 100
        },
        "logo": {
          "height": "40px",
          "iconBackground": "#7B2FFF",
          "iconShape": "rounded-square"
        },
        "navigationIcons": {
          "fill": "#FFFFFF",
          "size": "24px",
          "opacity": 0.9,
          "hoverOpacity": 1,
          "background": "transparent"
        },
        "notificationBadge": {
          "background": "#FF4757",
          "textColor": "#FFFFFF",
          "fontSize": "10px",
          "minWidth": "16px",
          "height": "16px",
          "borderRadius": "8px",
          "position": "absolute",
          "top": "-4px",
          "right": "-4px"
        },
        "userIcon": {
          "background": "#3D3D60",
          "borderRadius": "50%",
          "size": "36px",
          "iconColor": "#FFFFFF"
        },
        "appButton": {
          "background": "#7B2FFF",
          "textColor": "#FFFFFF",
          "borderRadius": "20px",
          "padding": "8px 16px",
          "fontSize": "14px",
          "fontWeight": 600,
          "iconSize": "16px",
          "iconColor": "#FFFFFF",
          "gap": "6px"
        }
      },
  
      "sections": {
        "container": {
          "padding": "24px 16px",
          "gap": "16px"
        },
        "title": {
          "color": "#FFFFFF",
          "fontSize": "20px",
          "fontWeight": 700,
          "marginBottom": "16px",
          "letterSpacing": "-0.02em"
        }
      },
  
      "cards": {
        "actionCard": {
          "description": "Interactive cards like 'Surprise me!' with gradient background",
          "background": "linear-gradient(135deg, #7B2FFF 0%, #9747FF 100%)",
          "borderRadius": "16px",
          "padding": "20px",
          "minHeight": "100px",
          "width": "120px",
          "border": "none",
          "shadow": "0 4px 20px rgba(123, 47, 255, 0.3)",
          "icons": {
            "fill": "#FFFFFF",
            "size": "28px",
            "background": "none"
          },
          "text": {
            "color": "#FFFFFF",
            "fontSize": "14px",
            "fontWeight": 600,
            "textAlign": "center"
          },
          "hover": {
            "background": "linear-gradient(135deg, #8B3FFF 0%, #A757FF 100%)",
            "transform": "translateY(-2px)",
            "shadow": "0 6px 24px rgba(123, 47, 255, 0.4)"
          }
        },
  
        "placeholderCard": {
          "description": "Empty state cards showing clock/history icons",
          "background": "#252547",
          "borderRadius": "16px",
          "border": "1px solid #3D3D60",
          "width": "120px",
          "minHeight": "100px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "icons": {
            "fill": "#6B6B8A",
            "size": "32px",
            "opacity": 0.6
          },
          "hover": {
            "background": "#2D2D50",
            "borderColor": "#4A4A70"
          }
        },
  
        "featuredCard": {
          "description": "Large hero/featured game card with image and overlay",
          "container": {
            "borderRadius": "20px",
            "overflow": "hidden",
            "position": "relative",
            "aspectRatio": "16/10",
            "width": "100%"
          },
          "image": {
            "objectFit": "cover",
            "width": "100%",
            "height": "100%"
          },
          "overlay": {
            "background": "linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.8) 100%)",
            "position": "absolute",
            "bottom": 0,
            "left": 0,
            "right": 0,
            "height": "50%",
            "padding": "20px"
          },
          "gameIcon": {
            "size": "48px",
            "borderRadius": "12px",
            "border": "2px solid rgba(255, 255, 255, 0.2)"
          },
          "title": {
            "color": "#FFFFFF",
            "fontSize": "18px",
            "fontWeight": 700
          },
          "category": {
            "color": "#B8B8D0",
            "fontSize": "12px",
            "fontWeight": 500
          },
          "playButton": {
            "background": "#7B2FFF",
            "textColor": "#FFFFFF",
            "borderRadius": "24px",
            "padding": "12px 28px",
            "fontSize": "16px",
            "fontWeight": 600,
            "position": "absolute",
            "right": "20px",
            "bottom": "20px"
          },
          "carouselIndicators": {
            "container": {
              "position": "absolute",
              "bottom": "20px",
              "left": "50%",
              "transform": "translateX(-50%)",
              "display": "flex",
              "gap": "8px"
            },
            "dot": {
              "width": "8px",
              "height": "8px",
              "borderRadius": "4px",
              "background": "rgba(255, 255, 255, 0.3)"
            },
            "dotActive": {
              "background": "#FFFFFF",
              "width": "24px"
            }
          }
        },
  
        "gameCard": {
          "description": "Standard game thumbnail cards in grid",
          "container": {
            "borderRadius": "16px",
            "overflow": "hidden",
            "background": "#252547",
            "transition": "transform 0.2s ease, box-shadow 0.2s ease"
          },
          "thumbnail": {
            "aspectRatio": "1/1",
            "objectFit": "cover",
            "width": "100%",
            "borderRadius": "16px 16px 0 0"
          },
          "title": {
            "color": "#FFFFFF",
            "fontSize": "13px",
            "fontWeight": 500,
            "padding": "10px 0 0 0",
            "textAlign": "center",
            "overflow": "hidden",
            "textOverflow": "ellipsis",
            "whiteSpace": "nowrap"
          },
          "hover": {
            "transform": "translateY(-4px) scale(1.02)",
            "shadow": "0 8px 24px rgba(0, 0, 0, 0.4)"
          },
          "active": {
            "transform": "scale(0.98)"
          }
        }
      },
  
      "buttons": {
        "primary": {
          "background": "#7B2FFF",
          "textColor": "#FFFFFF",
          "borderRadius": "24px",
          "padding": "12px 24px",
          "fontSize": "14px",
          "fontWeight": 600,
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#8B3FFF",
            "transform": "translateY(-1px)",
            "shadow": "0 4px 16px rgba(123, 47, 255, 0.4)"
          },
          "active": {
            "background": "#6023CC",
            "transform": "translateY(0)"
          },
          "disabled": {
            "background": "#3D3D60",
            "textColor": "#6B6B8A",
            "cursor": "not-allowed"
          },
          "focus": {
            "outline": "2px solid #9747FF",
            "outlineOffset": "2px"
          }
        },
  
        "secondary": {
          "background": "transparent",
          "textColor": "#FFFFFF",
          "border": "1px solid #3D3D60",
          "borderRadius": "24px",
          "padding": "12px 24px",
          "fontSize": "14px",
          "fontWeight": 600,
          "hover": {
            "background": "#252547",
            "borderColor": "#4A4A70"
          },
          "active": {
            "background": "#2D2D50"
          }
        },
  
        "ghost": {
          "background": "transparent",
          "textColor": "#B8B8D0",
          "border": "none",
          "padding": "8px 16px",
          "hover": {
            "textColor": "#FFFFFF",
            "background": "rgba(255, 255, 255, 0.05)"
          }
        },
  
        "icon": {
          "background": "transparent",
          "size": "40px",
          "borderRadius": "50%",
          "iconColor": "#FFFFFF",
          "iconSize": "20px",
          "hover": {
            "background": "rgba(255, 255, 255, 0.1)"
          },
          "active": {
            "background": "rgba(255, 255, 255, 0.15)"
          }
        }
      },
  
      "icons": {
        "navigation": {
          "fill": "#FFFFFF",
          "size": "24px",
          "strokeWidth": "2px",
          "opacity": 0.9
        },
        "placeholder": {
          "fill": "#6B6B8A",
          "size": "32px",
          "opacity": 0.6
        },
        "action": {
          "fill": "#FFFFFF",
          "size": "20px"
        },
        "decorative": {
          "fill": "#7B2FFF",
          "size": "16px"
        }
      },
  
      "badges": {
        "notification": {
          "background": "#FF4757",
          "textColor": "#FFFFFF",
          "fontSize": "10px",
          "fontWeight": 700,
          "minWidth": "18px",
          "height": "18px",
          "borderRadius": "9px",
          "padding": "0 5px"
        },
        "category": {
          "background": "rgba(123, 47, 255, 0.2)",
          "textColor": "#9747FF",
          "fontSize": "11px",
          "fontWeight": 600,
          "borderRadius": "6px",
          "padding": "4px 8px"
        },
        "tag": {
          "background": "#252547",
          "textColor": "#B8B8D0",
          "fontSize": "11px",
          "borderRadius": "6px",
          "padding": "4px 8px"
        }
      },
  
      "inputs": {
        "search": {
          "background": "#252547",
          "textColor": "#FFFFFF",
          "placeholderColor": "#6B6B8A",
          "border": "1px solid transparent",
          "borderRadius": "12px",
          "padding": "12px 16px 12px 44px",
          "fontSize": "14px",
          "iconColor": "#6B6B8A",
          "iconSize": "20px",
          "focus": {
            "borderColor": "#7B2FFF",
            "background": "#2D2D50"
          }
        }
      }
    },
  
    "layout": {
      "grid": {
        "gameCards": {
          "columns": 3,
          "gap": "12px",
          "itemMinWidth": "100px"
        },
        "horizontalScroll": {
          "gap": "12px",
          "paddingX": "16px",
          "scrollSnapType": "x mandatory"
        }
      },
      "spacing": {
        "xxs": "4px",
        "xs": "8px",
        "sm": "12px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "xxl": "48px"
      },
      "containerPadding": {
        "mobile": "16px",
        "tablet": "24px",
        "desktop": "32px"
      }
    },
  
    "typography": {
      "fontFamily": {
        "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "mono": "'JetBrains Mono', 'Fira Code', monospace"
      },
      "scale": {
        "h1": {
          "fontSize": "28px",
          "fontWeight": 800,
          "lineHeight": 1.2,
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": "20px",
          "fontWeight": 700,
          "lineHeight": 1.3,
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontSize": "16px",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "body": {
          "fontSize": "14px",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "bodySmall": {
          "fontSize": "13px",
          "fontWeight": 400,
          "lineHeight": 1.4
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": 500,
          "lineHeight": 1.4
        },
        "label": {
          "fontSize": "11px",
          "fontWeight": 600,
          "lineHeight": 1.3,
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        }
      }
    },
  
    "effects": {
      "shadows": {
        "sm": {
          "value": "0 2px 8px rgba(0, 0, 0, 0.2)",
          "applyTo": ["small buttons", "badges", "tooltips"]
        },
        "md": {
          "value": "0 4px 16px rgba(0, 0, 0, 0.3)",
          "applyTo": ["cards", "dropdowns", "modals"]
        },
        "lg": {
          "value": "0 8px 32px rgba(0, 0, 0, 0.4)",
          "applyTo": ["featured cards", "modal overlays", "popovers"]
        },
        "accentGlow": {
          "value": "0 4px 20px rgba(123, 47, 255, 0.3)",
          "applyTo": ["primary buttons", "accent cards", "active states"]
        },
        "accentGlowStrong": {
          "value": "0 8px 32px rgba(123, 47, 255, 0.5)",
          "applyTo": ["hover on primary elements", "focus rings"]
        }
      },
      "borderRadius": {
        "xs": "4px",
        "sm": "8px",
        "md": "12px",
        "lg": "16px",
        "xl": "20px",
        "full": "9999px"
      },
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease",
        "spring": "0.4s cubic-bezier(0.34, 1.56, 0.64, 1)"
      }
    },
  
    "animations": {
      "cardHover": {
        "transform": "translateY(-4px)",
        "transition": "transform 0.2s ease, box-shadow 0.2s ease"
      },
      "buttonPress": {
        "transform": "scale(0.98)",
        "transition": "transform 0.1s ease"
      },
      "fadeIn": {
        "from": { "opacity": 0 },
        "to": { "opacity": 1 },
        "duration": "0.3s"
      },
      "slideUp": {
        "from": { "opacity": 0, "transform": "translateY(10px)" },
        "to": { "opacity": 1, "transform": "translateY(0)" },
        "duration": "0.3s"
      },
      "pulse": {
        "keyframes": "0%{opacity:1} 50%{opacity:0.5} 100%{opacity:1}",
        "duration": "2s",
        "iteration": "infinite",
        "applyTo": ["loading states", "skeleton screens"]
      }
    },
  
    "componentStates": {
      "card": {
        "default": {
          "background": "#252547",
          "border": "1px solid transparent",
          "transform": "none",
          "shadow": "none"
        },
        "hover": {
          "background": "#2D2D50",
          "border": "1px solid #3D3D60",
          "transform": "translateY(-4px)",
          "shadow": "0 8px 24px rgba(0, 0, 0, 0.4)"
        },
        "active": {
          "transform": "scale(0.98)",
          "shadow": "0 4px 12px rgba(0, 0, 0, 0.3)"
        },
        "focus": {
          "outline": "2px solid #7B2FFF",
          "outlineOffset": "2px"
        },
        "disabled": {
          "opacity": 0.5,
          "pointerEvents": "none"
        }
      },
      "button": {
        "default": {
          "transform": "none",
          "shadow": "none"
        },
        "hover": {
          "transform": "translateY(-1px)",
          "shadow": "0 4px 16px rgba(123, 47, 255, 0.4)"
        },
        "active": {
          "transform": "translateY(0) scale(0.98)"
        },
        "focus": {
          "outline": "2px solid #9747FF",
          "outlineOffset": "2px"
        },
        "disabled": {
          "opacity": 0.5,
          "cursor": "not-allowed"
        }
      }
    },
  
    "criticalRules": {
      "DO_NOT": [
        {
          "rule": "DO NOT apply card gradients to icons",
          "wrong": "icon { background: linear-gradient(135deg, #7B2FFF, #9747FF) }",
          "correct": "icon { fill: #FFFFFF } - Icons should be solid colors, never gradients"
        },
        {
          "rule": "DO NOT apply button purple to regular text",
          "wrong": "p { color: #7B2FFF }",
          "correct": "p { color: #FFFFFF or #B8B8D0 } - Purple is for interactive elements only"
        },
        {
          "rule": "DO NOT put shadows on text elements",
          "wrong": "h2 { box-shadow: 0 4px 16px rgba(0,0,0,0.3) }",
          "correct": "Shadows go on containers/cards, not text elements"
        },
        {
          "rule": "DO NOT use border-radius on inline text",
          "wrong": "span { border-radius: 16px }",
          "correct": "Border radius is for containers, buttons, cards, badges"
        },
        {
          "rule": "DO NOT apply overlay gradients to solid backgrounds",
          "wrong": ".card-bg { background: linear-gradient(180deg, transparent, rgba(0,0,0,0.8)) }",
          "correct": "Overlay gradients only on images, using position: absolute"
        },
        {
          "rule": "DO NOT use accent glow shadow on non-interactive elements",
          "wrong": ".card { box-shadow: 0 4px 20px rgba(123, 47, 255, 0.3) }",
          "correct": "Accent glow only on primary buttons, CTAs, active states"
        },
        {
          "rule": "DO NOT mix placeholder icon colors with action icons",
          "wrong": ".action-icon { fill: #6B6B8A }",
          "correct": "Action icons use #FFFFFF, placeholder/empty state icons use #6B6B8A"
        }
      ],
      "ALWAYS": [
        {
          "rule": "ALWAYS use solid purple (#7B2FFF) for primary buttons, gradient for special action cards",
          "context": "Buttons get solid, promotional/action cards get gradient"
        },
        {
          "rule": "ALWAYS apply image overlays as pseudo-elements or separate divs",
          "context": "Never mix overlay with image source"
        },
        {
          "rule": "ALWAYS use rgba for shadows and overlays, hex for solid colors",
          "context": "Shadows need transparency, fills should be opaque"
        },
        {
          "rule": "ALWAYS maintain contrast - white text on dark backgrounds only",
          "context": "Text colors depend on background luminosity"
        },
        {
          "rule": "ALWAYS use border-radius: 16px for cards, 24px for buttons",
          "context": "Consistent rounding per component type"
        },
        {
          "rule": "ALWAYS put gap between grid items, never margin on items",
          "context": "Use CSS gap property for consistent spacing"
        }
      ]
    },
  
    "cssVariables": {
      "colors": {
        "--color-bg-primary": "#1A1A2E",
        "--color-bg-secondary": "#16162A",
        "--color-bg-card": "#252547",
        "--color-bg-elevated": "#2D2D50",
        "--color-accent-primary": "#7B2FFF",
        "--color-accent-light": "#9747FF",
        "--color-accent-dark": "#6023CC",
        "--color-text-primary": "#FFFFFF",
        "--color-text-secondary": "#B8B8D0",
        "--color-text-muted": "#6B6B8A",
        "--color-border-subtle": "#3D3D60",
        "--color-border-medium": "#4A4A70",
        "--color-status-error": "#FF4757",
        "--color-status-success": "#2ED573"
      },
      "spacing": {
        "--spacing-xxs": "4px",
        "--spacing-xs": "8px",
        "--spacing-sm": "12px",
        "--spacing-md": "16px",
        "--spacing-lg": "24px",
        "--spacing-xl": "32px"
      },
      "radius": {
        "--radius-sm": "8px",
        "--radius-md": "12px",
        "--radius-lg": "16px",
        "--radius-xl": "20px",
        "--radius-full": "9999px"
      },
      "shadows": {
        "--shadow-sm": "0 2px 8px rgba(0, 0, 0, 0.2)",
        "--shadow-md": "0 4px 16px rgba(0, 0, 0, 0.3)",
        "--shadow-lg": "0 8px 32px rgba(0, 0, 0, 0.4)",
        "--shadow-accent": "0 4px 20px rgba(123, 47, 255, 0.3)"
      }
    },
  
    "selectorMapping": {
      "html, body": {
        "background": "var(--color-bg-primary)",
        "color": "var(--color-text-primary)",
        "fontFamily": "var(--font-primary)"
      },
      "header, .header, nav": {
        "background": "var(--color-bg-secondary)"
      },
      ".card, .game-card": {
        "background": "var(--color-bg-card)",
        "borderRadius": "var(--radius-lg)",
        "transition": "transform 0.2s ease, box-shadow 0.2s ease"
      },
      ".card:hover, .game-card:hover": {
        "transform": "translateY(-4px)",
        "boxShadow": "var(--shadow-lg)"
      },
      ".btn-primary, .button-primary": {
        "background": "var(--color-accent-primary)",
        "color": "var(--color-text-primary)",
        "borderRadius": "var(--radius-full)",
