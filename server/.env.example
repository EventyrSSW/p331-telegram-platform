PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your-secret-key-min-32-chars-here
TELEGRAM_BOT_TOKEN=your-bot-token

# TON Configuration
PAYMENT_RECEIVER_ADDRESS=UQC...your-wallet-address-here
# TON blockchain API endpoint for transaction verification
# Mainnet: https://toncenter.com/api/v2/jsonRPC
# Testnet: https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
# Optional: API key for toncenter (get one at https://toncenter.com)
TON_API_KEY=
# Minimum confirmations before crediting (default: 1)
TON_MIN_CONFIRMATIONS=1
# Verification timeout in milliseconds (default: 30000)
TON_VERIFICATION_TIMEOUT_MS=30000

# Nakama Server (for wallet synchronization)
NAKAMA_HOST=localhost
NAKAMA_PORT=7350
NAKAMA_SERVER_KEY=defaultkey
# Set to true for production HTTPS connections
NAKAMA_USE_SSL=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/p331

# CORS
ALLOWED_ORIGINS=http://localhost:5173,https://p331-tg-platform.vercel.app
